<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.moku.davide.sideproject.kotlin.KotlinProgrammingLanguagesActivity"
    android:orientation="vertical"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        style="@style/customTextViewsBold"
        android:layout_gravity="center_horizontal"
        android:text="@string/allProgrammingLanguages"
        android:textSize="18sp"
        android:layout_marginBottom="5dp"/>

    <TextView
        style="@style/customTextViewsLight"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/ordered_by_usage"/>

    <GridView
        android:id="@+id/programmingLanguagesGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        tools:listitem="@layout/programming_language_cell_layout"/>

</LinearLayout>
