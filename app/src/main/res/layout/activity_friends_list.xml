<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:indefinite_pager_indicator="http://schemas.android.com/apk/res-auto"
    tools:context="io.moku.davide.testinglibraries.myFriends.FriendsListActivity">

    <com.rbrooks.indefinitepagerindicator.IndefinitePagerIndicator
        android:id="@+id/pagerIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        app:dotRadius="3dp"
        app:selectedDotRadius="5.5dp"
        app:dotColor="@color/grey"
        app:selectedDotColor="@color/darkerGrey"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/view_holder_item_layout" />

</LinearLayout>
